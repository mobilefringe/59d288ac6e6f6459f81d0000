<script>
    $(document).ready(function(e){
        init(e)
        function renderAll(){
            var pathArray = window.location.pathname.split( '/' );
            var slug = pathArray[pathArray.length-1];
            promo_details = getPromotionDetailsBySlug(slug);
            console.log(promo_details);
            renderPromoDetails('#promo_details_container', '#promo_details_template', promo_details);
            renderPromoDetails("#store_header_container","#store_header_template", promo_details);
            // show_content();
        }
        loadMallDataCached(renderAll); 
    });
    $(window).load(function(e){
        show_content();
    });
</script>